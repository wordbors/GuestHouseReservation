@model CrudRoomViewModel

@{
    ViewData["Title"] = "EditRoom";
}

<hr />
<h4>Редактиране на стая.</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="EditRoom">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="ID" />
            <div class="form-group">
                <label>Номер</label>
                <input asp-for="Number" class="form-control" />
                <span asp-validation-for="Number" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label>Тип</label>
                <select asp-for="TypeID" asp-items="Model.RoomTypes" class="form-control"></select>
                <span asp-validation-for="TypeID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <div></div>

                <button type="submit" class="btn btn-success btn-md pull-right ">Запис</button>
            </div>
        </form>
    </div>
</div>

