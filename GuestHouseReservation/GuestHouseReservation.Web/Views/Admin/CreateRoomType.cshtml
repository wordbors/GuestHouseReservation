@model RoomType

@{
    ViewData["Title"] = "View";
}



<hr />
<h4>Добавяне на тип стая</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="CreateRoomType">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="ID" />
            <div class="form-group">
                <label>Име</label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label>Капацитет</label>
                <input asp-for="Capacity" class="form-control" />
                <span asp-validation-for="Capacity" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label>Цена</label>
                <input asp-for="Price" class="form-control" />
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label>Описание</label>
                <input asp-for="Discription" class="form-control" />
                <span asp-validation-for="Discription" class="text-danger"></span>
            </div>
            <div class="form-group">
                <div></div>
                <button type="submit" class="btn btn-success btn-md pull-right ">Запис</button>
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="AllRoomTypes">Назад</a>
</div>

